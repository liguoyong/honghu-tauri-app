{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "honghu-tauri-app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["*", "$DOWNLOAD/*"]
      },
      "window": {
        "all": true
      },
      "http":{
        "all": true,
        "request": true,
        "scope":[
          "http://**",
          "https://**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [{
      "fullscreen": false,
      "resizable": true,
      "title": "honghu-tauri-app",
      "width": 1080,
      "height": 600,
      "fileDropEnabled": false,
      "label": "customization",
      "center": true,
      "decorations": false,
      "transparent":true
    }]
  }
}